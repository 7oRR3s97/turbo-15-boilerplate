{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@apps/"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["^@packages/"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["^@tooling/"],
      "enabled": false
    }
  ],
  "updateInternalDeps": true,
  "rangeStrategy": "bump",
  "automerge": true
}
